<!DOCTYPE html>
<html>
  <head>
    <title>Go Ride App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag 'logo.jpg', alt: "Simplified Go Food" %>
      <span class="title"><%= @page_title %></span>
    </div>
    <div id="columns">
      <div id="side">
        <h4>Menu</h4>     
        <ul>
          <!-- <li><a href="/">Home</a></li>         -->
        </ul>

        <% if session[:user_id] %>
          <ul>
            <li><b>Credit : </b> <%= number_to_currency(@logged_user.credit, unit: "Rp. ", delimiter: ".", separator: ",") %> </li>
            <li><%= link_to 'My Profile', user_path(session[:user_id]) %></a></li>
            <li> </li>
            <li><%= button_to 'Logout', logout_path, method: :delete %></li>
          </ul>
        <% else %>
          <ul>
            <li><a href="/">Login</a></li>  
          </ul>
        <% end %>

        <h4>All Models</h4>
        <ul>
          <li><a href="/users">User</a></li>
          <li><a href="/drivers">Driver</a></li>
        </ul>
      </div>

      <div id="main">
        <%= yield %>
      </div>

      <div id="side">
      </div>
      
    </div>
  </body>
</html>