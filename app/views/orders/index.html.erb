<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User ID</th>
      <th>Driver ID</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Distance</th>
      <th>Service Type</th>
      <th>Payment Type</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.try(:id) %></td>
        <td><%= order.user_id %></td>
        <td><%= order.driver_id %></td>
        <td><%= order.origin %></td>
        <td><%= order.destination %></td>
        <td><%= order.distance %></td>
        <td><%= order.service_type %></td>
        <td><%= order.payment_type %></td>
        <td><%= order.price %></td>
        <td><%= order.status %></td>

        <td><%# link_to 'Show', driver_location %></td>
        <td><%# link_to 'Edit', edit_driver_path(driver_location) %></td>
        <td><%# link_to 'Destroy', driver_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Order", new_order_path %>