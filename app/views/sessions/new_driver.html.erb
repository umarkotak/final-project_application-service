<div class="go_food_form">
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <%= form_tag('/login_driver', method: 'post') do %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        Driver Login
      </div>

      <div class="panel-body">
        <div class="form-group">
          <%= label_tag :username, 'username' %>
          <%= text_field_tag :username, params[:username], required: true %>
        </div>

        <div class="form-group">
          <%= label_tag :password, 'password' %>
          <%= password_field_tag :password, params[:password], required: true %>
        </div>
      </div>

      <div class="panel-footer">
        <%= link_to 'Register', '/drivers/new', class: 'btn btn-success' %>
        <%= button_to 'Login', login_path, method: :create, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>