<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table border="1" width="100%">
  <thead>
    <tr>
      <th>Username</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Credit</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.credit %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Top Up', topup_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

