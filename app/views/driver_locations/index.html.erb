<p id="notice"><%= notice %></p>

<h1>Driver Locations</h1>

<table border="1" width="100%">
  <thead>
    <tr>
      <th>Driver_id</th>
      <th>Service Type</th>
      <th>Location</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Status</th>
      <th>Order_id</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @driver_locations.each do |driver_location| %>
      <tr>
        <td><%= driver_location['driver_id'] %></td>
        <td><%= driver_location['service_type'] %></td>
        <td><%= driver_location['location'] %></td>
        <td><%= driver_location['lat'] %></td>
        <td><%= driver_location['lng'] %></td>
        <% if driver_location['status'] == 'online' %>
          <td><p style="color: green"><b><%= driver_location['status'] %></b></p></td>
        <% else %>
          <td><p style="color: red"><b><%= driver_location['status'] %></b></p></td>
        <% end %>
        <td><%= driver_location['order_id'] %></td>
        <td><%= link_to 'Unset', "/driver_locations/#{driver_location['driver_id']}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Set My Location", new_driver_location_path %>