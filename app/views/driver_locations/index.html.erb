<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <b>Driver Locations</b>
  </div>

  <div class="panel-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Driver_id</th>
          <th>Service Type</th>
          <th>Location</th>
          <th>Lat</th>
          <th>Lng</th>
          <th>Status</th>
          <th>Order_id</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @driver_locations.each do |driver_location| %>
          <tr>
            <td><%= driver_location['driver_id'] %></td>
            <td><%= driver_location['service_type'] %></td>
            <td><%= driver_location['location'] %></td>
            <td><%= driver_location['lat'] %></td>
            <td><%= driver_location['lng'] %></td>
            <% if driver_location['status'] == 'online' %>
              <td><span class="label label-success"><b><%= driver_location['status'] %></b></span></td>
            <% else %>
              <td><span class="label label-danger"><b><%= driver_location['status'] %></b></span></td>
            <% end %>
            <td><%= driver_location['order_id'] %></td>
            <td><%= link_to 'Unset', "/driver_locations/#{driver_location['driver_id']}", method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <%= link_to "Set My Location", new_driver_location_path, class: 'btn btn-primary' %>
  </div>
</div>
