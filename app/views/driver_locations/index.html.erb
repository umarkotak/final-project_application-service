<p id="notice"><%= notice %></p>

<h1>Driver Locations</h1>

<table border="1" width="100%">
  <thead>
    <tr>
      <th>Driver_id</th>
      <th>Driver Name</th>
      <th>Service Type</th>
      <th>Location</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Status</th>
      <th>Order_id</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @driver_locations.each do |driver_location| %>
      <tr>
        <td><%= driver_location.driver.try(:id) %></td>
        <td><%= driver_location.driver.try(:full_name) %></td>
        <td><%= driver_location.driver.try(:service_type) %></td>
        <td><%= driver_location.location %></td>
        <td><%= driver_location.lat %></td>
        <td><%= driver_location.lng %></td>
        <td><%= driver_location.status %></td>
        <td><%= driver_location.order_id %></td>
        <td><%# link_to 'Show', driver_location %></td>
        <td><%# link_to 'Edit', edit_driver_path(driver_location) %></td>
        <td><%# link_to 'Destroy', driver_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Set My Location", new_driver_location_path %>